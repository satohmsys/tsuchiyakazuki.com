            <section class="section section--profile">
                <div class="wrap">
                  <div class="profile">
                      <section class="profile__top">
                          <figure class="profile__img">
                              <img src="<%- $src_profile %>profile-img.jpg" width="1000" alt="自民党 土屋和樹">
